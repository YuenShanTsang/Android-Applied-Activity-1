<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Extract_the_Vowels.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <!-- Title label -->
            <Label
                Text="Extract the Vowels"
                FontSize="30"
                HorizontalOptions="Center" />

            <!-- Input entry field -->
            <Entry
                x:Name="InputEntry"
                Placeholder="Please enter a word"
                HorizontalOptions="FillAndExpand" />

            <!-- Extract button -->
            <Button
                Text="Extract"
                Clicked="ExtractButton_Clicked"
                HorizontalOptions="Center" />

            <!-- Output label -->
            <Label
                x:Name="OutputLabel"
                FontSize="18"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
